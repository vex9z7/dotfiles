# docs https://i3wm.org/docs/i3status.html
general {
        output_format = "i3bar"
        colors = true
        interval = 5
}

order += "run_watch DHCP"
order += "path_exists VPN"
order += "wireless _first_"
order += "ethernet _first_"


order += "volume master"


order += "cpu_usage"
order += "load"
order += "cpu_temperature 0"
order += "memory"
order += "disk /"


order += "time"
order += "battery all"


volume master {
        format = "󰕾  %volume"
        format_muted = "󰖁  %volume"
        device = "pulse"
}

wireless _first_ {
        format_up = "󰖩  [%essid, %quality] %ip (%bitrate)"
        format_down = "󰖪"
}

ethernet _first_ {
        format_up = "󰱓  %ip (%speed)"

        format_down = "󰅛"
}

battery all {
        path = "/sys/class/power_supply/BAT%d/uevent"

        # use the last full capacity instead of the design capacity
        last_full_capacity = true

        # dont show seconds in the remaining time and empty time estimations
        hide_seconds = true
        # show the battery percentage without decimals
        integer_battery_capacity = true

        format = "%status %percentage %remaining %emptytime"
        format_down = "󱉝"
        status_chr = "󰂏"
        status_bat = "󰂌"
        status_unk = "󰂑"
        status_full = "󰁹"
        low_threshold = 30
        threshold_type = percentage
        # 󰂎 can be used to indicate the battery is low
}

run_watch DHCP {
        pidfile = "/var/run/dhclient*.pid"
        format_down=""
}

path_exists VPN {
        # path exists when a VPN tunnel launched by nmcli/nm-applet is active
        path = "/proc/sys/net/ipv4/conf/tun0"
        format_down=""
}

time {
        separator = false

        format = "%m-%d %H:%M"
}



cpu_usage {
        max_threshold = "66"
        degraded_threshold = "33"

        separator = false

        format = "󰾆  %usage"
        format_above_degraded_threshold = "󰾅  %usage"
        format_above_threshold = "󰓅  %usage"
}

load {
        # max_threshold = "5"

        separator = false

        format = "󱀤  %1min"
        # format_above_threshold = "󱀤 %1min"
}

cpu_temperature 0 {
        path = "/sys/devices/platform/coretemp.0/hwmon/hwmon4/temp*_input"

        # max_threshold = "75"

        separator = false

        format = " %degrees °C"
        format_above_threshold = " %degrees °C"
}

memory {
        # threshold_degraded = "30%"
        # threshold_critical = "10%"

        # format = "  %used(%percentage_used)"

        separator = false

        format = "󰍛  %percentage_used"
        format_degraded = "󰍛  %available(%percentage_available)"

}

disk "/" {
        # format = "󰋊  %used(%percentage_used) "
        format = "󰋊  %percentage_used"
        low_threshold = "10"
        format_below_threshold = "󰋊  %avail(%percentage_avail)"
        threshold_type = "percentage_avail"
}
