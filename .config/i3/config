# resize window (you can also use the mouse for that)
mode "resize" {
# These bindings trigger as soon as you enter the resize mode

    # left will shrink the window’s width.
    bindsym Shift+h resize shrink width 50 px or 10 ppt
    # up will shrink the window’s height.
    bindsym Shift+j resize grow height 50 px or 10 ppt
    # down will grow the window’s height.
    bindsym Shift+k resize shrink height 50 px or 10 ppt
    # right will grow the window’s width.
    bindsym Shift+l resize grow width 50 px or 10 ppt

    bindsym h move left 2 ppt
    bindsym j move down 2 ppt
    bindsym k move up 2 ppt
    bindsym l move right 2 ppt

    # back to normal: Enter or Escape or $mod+r
    bindsym Return mode "default"
    bindsym Escape mode "default"
    bindsym $mod+r mode "default"
}

bindsym $mod+r mode "resize"

